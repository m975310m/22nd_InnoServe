<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sea.icoco.SearchMenuActivity"
    android:background="@color/background_floating_material_light">

    <RelativeLayout
        android:layout_height="100dp"
        android:layout_width="200dp"
        android:id="@+id/relativeLayout28"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/relativeLayout27"
        android:layout_alignStart="@+id/relativeLayout27">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/searchaa2"
            android:id="@+id/searchAA_img"/>

        <RelativeLayout
            android:id="@+id/relativeLayout19"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp" android:layout_marginTop="7dp">
            <ImageView
                android:id="@+id/redBall2_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" android:src="@drawable/redball"/>
            <TextView
                android:id="@+id/redBall2_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="8" android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" android:textSize="25sp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/relativeLayout28"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/relativeLayout28"
        android:layout_marginBottom="43dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/searchTransaction_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:srcCompat="@drawable/search_transfer2" />

        <RelativeLayout
            android:id="@+id/relativeLayout20"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp">

            <ImageView
                android:id="@+id/redBall3_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/redball"
                android:visibility="gone" />

            <TextView
                android:id="@+id/redBall3_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="8"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="39dp"
        android:layout_height="100dp"
        android:layout_width="200dp"
        android:id="@+id/relativeLayout27"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/search_oupon2"
            android:id="@+id/searchCoupon_img"/>

        <RelativeLayout
            android:id="@+id/relativeLayout18"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp" android:layout_marginTop="7dp">
            <ImageView
                android:id="@+id/redBall_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" android:src="@drawable/redball"/>
            <TextView
                android:id="@+id/redBall_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="8" android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" android:textSize="25sp"
                android:textStyle="bold"/>
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
